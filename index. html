<body>
  <h1>Enter your name</h1>
  <input type="text" id="username" placeholder="Your name" /><br/>
  <label for="userphoto">Upload your photo:</label><br/>
  <input type="file" id="userphoto" accept="image/*" /><br/>
  <button onclick="goNext()">Next</button>

  <script>
    function goNext() {
      const name = document.getElementById("username").value;
      const file = document.getElementById("userphoto").files[0];

      if(!name.trim()) {
        alert("Please enter your name");
        return;
      }

      if(!file) {
        alert("Please upload a photo");
        return;
      }

      const reader = new FileReader();
      reader.onload = function(e) {
        localStorage.setItem("userImage", e.target.result); // base64
        window.location.href = `page2.html?name=${encodeURIComponent(name)}`;
      };
      reader.readAsDataURL(file);
    }
  </script>
</body>
</html>
